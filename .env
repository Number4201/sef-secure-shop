# API URL pro lokální API server
VITE_API_URL=http://localhost:9000/store

# Medusa backend URL - MUSÍ být absolutní URL včetně /store
VITE_MEDUSA_BACKEND_URL=http://localhost:9000/store

# Medusa publishable API key (pokud je potřeba)
VITE_MEDUSA_PUBLISHABLE_API_KEY=test

# EspoCRM URL
VITE_ESPOCRM_URL=http://localhost:8080

# Debug mode
VITE_DEBUG=true

# Použití Medusa backendu místo mock dat
VITE_USE_MEDUSA=true

# Database configuration
DATABASE_TYPE=postgres
DATABASE_URL=postgres://postgres:postgres@localhost:5432/sef_secure_shop
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=sef_secure_shop

# Redis configuration
REDIS_URL=redis://localhost:6379
